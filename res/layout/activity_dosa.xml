                android:textColor="#453E3E"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/samosa"
                android:layout_width="380dp"
                android:layout_height="186dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/samosa" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="@string/jalebi"
                android:textColor="#453E3E"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/jalebi"
                android:layout_width="379dp"
                android:layout_height="186dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/jalebi" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="@string/roti12"
                android:textColor="#453E3E"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/roti"
                android:layout_width="380dp"
                android:layout_height="186dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/roti" />

